void Exp_a_d()
{
    int a = 1;
    double d = 1.0;
    
    a = 46 % 9 + 4 * 4 - 2;
    printf("a = %d\n", a);
    
    a = 45 + 43 % 5 * (23 * 3 % 2);
    printf("a = %d\n", a);
    
    a = 45 + 45 * 50 % a--;
    printf("a = %d\n", a);
    
    d = 1.5 * 3 + (++d);
    printf("d = %lf\n", d);
    
    d = 1.5 * 3 + d++;
    printf("d = %d\n", d);
    
    a %= 3 / a + 3;
    printf("a = %d\n", a);
}

#include <stdio.h>
#include <math.h>

void volumen_cono()
{
    float radio = 14.5;
    float height = 26.79;
    float pi =3.141592;
    
    float volume_cone =(pi*radio*radio*height)/3;
    printf ("El volumen del cono es: %f\n",volume_cone);

}
